@model ProjetoPCRH.Models.Funcionario

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1> @*Título da página*@

<div>
    <h4>Funcionário</h4>
    <hr />
    <dl class="row">
        @*Imprime o cabeçalho da tabela*@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeFuncionario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeFuncionario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nif)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nif)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cargo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cargo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataAdmissao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataAdmissao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>
    <h4>Projetos do Funcionário</h4>

    @if (Model.FuncionarioProjetos != null && Model.FuncionarioProjetos.Any()) @*verifica se há dados*@
    {
        <table class="table table-striped table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Id Projeto</th>
                    <th>Nome do Projeto</th>
                    <th>Status</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var fp in Model.FuncionarioProjetos) @*Imprime os dados do Projeto*@
                {
                    <tr>
                        <td>@fp.Projeto.ProjetoId</td>
                        <td>@fp.Projeto.NomeProjeto</td>
                        <td>@fp.Projeto.StatusProjeto</td>
                        <td>
                            <a asp-controller="Projetos"
                               asp-action="Details"
                               asp-route-id="@fp.Projeto.ProjetoId"
                               class="btn btn-sm btn-primary">
                                Ver Detalhes
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p><em>Este funcionário ainda não está associado a nenhum projeto.</em></p>
    }


</div>
<div>
    <a asp-action="Edit" class="btn btn-success" asp-route-id="@Model?.FuncionarioId">Editar</a> |
    <a asp-action="Index" class="btn btn-primary">Voltar à lista</a>
</div>
