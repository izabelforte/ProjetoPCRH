@model Projeto
<form method="post">
    <div class="border pt-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="ProjetoId"></label>
            <input asp-for="ProjetoId" class="form-control" />
            <span asp-validation-for="ProjetoId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="NomeProjeto"></label>
            <input asp-for="NomeProjeto" class="form-control" />
            <span asp-validation-for="NomeProjeto" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Descricao"></label>
            <input asp-for="Descricao" class="form-control" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Cliente.NomeCliente"></label>
            <input asp-for="Cliente.NomeCliente" class="form-control" />
            <span asp-validation-for="Cliente.NomeCliente" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DataInicio"></label>
            <input asp-for="DataInicio" class="form-control" />
            <span asp-validation-for="DataInicio" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DataFim"></label>
            <input asp-for="DataFim" class="form-control" />
            <span asp-validation-for="DataFim" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Orcamento"></label>
            <input asp-for="Orcamento" class="form-control" />
            <span asp-validation-for="Orcamento" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="StatusProjeto"></label>
            <input asp-for="StatusProjeto" class="form-control" />
            <span asp-validation-for="StatusProjeto" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6"><button type="submit" class="btn btn-primary">Create</button></div>
            <div class="col-6 text-end"><a asp-controller="Home" asp-action="Index" class=" btn btn-secondary">Back to List</a></div>
        </div>


    </div>
</form>