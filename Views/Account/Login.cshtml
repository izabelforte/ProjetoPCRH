@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg rounded-4 p-4" style="min-width: 350px; max-width: 400px;">
        <div class="card-body">
            <h3 class="text-center mb-4">🔐 Login</h3>
@*Esta página trata do login *@
            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label for="username" class="form-label">Utilizador</label>
                    <input type="text" name="username" id="username" class="form-control" placeholder="Introduza o seu utilizador" required />
                </div>
@*Recebe o utilizador *@
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="Introduza a sua password" required />
                </div>
@*Recebe a password *@
                @if (!string.IsNullOrEmpty(ViewBag.Erro)) @*No caso de a password estar errado *@
                {
                    <div class="alert alert-danger text-center py-2">
                        @ViewBag.Erro
                    </div>
                }

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg rounded-pill">Entrar</button>
                </div>
            </form>
        </div>
    </div>
</div>
