@model IEnumerable<ProjetoPCRH.Models.Faturacao>

@{
    ViewData["Title"] = "Faturação";
}

<h1>Faturação</h1>

<br />
<p>
    <a asp-action="Create" class="btn btn-success">Criar</a>
</p>
<table class="table">
    @*Imprime o cabecalho da tabela*@
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataFatura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contrato)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) { @*Imprime os dados da tabela*@
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataFatura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contrato.ContratoId)
            </td>
                <td>
                    @*Botões*@
                    <a asp-action="Edit" asp-route-id="@item.FaturaId" class="btn btn-primary">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.FaturaId" class="btn btn-secondary">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.FaturaId" class="btn btn-danger">Eliminar</a>
                </td>
        </tr>
}
    </tbody>
</table>
