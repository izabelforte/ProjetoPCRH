@model ProjetoPCRH.Models.Relatorio

@{
    ViewData["Title"] = "Relatório do Projeto Terminado";
}

<h2>Relatório do Projeto Terminado</h2>

<div class="card p-3">
    <p><strong>Projeto:</strong> @Model.Projeto?.NomeProjeto</p>
    <p><strong>Descrição:</strong> @Model.Projeto?.Descricao</p>
    <p><strong>Data Início:</strong> @Model.Projeto?.DataInicio.ToShortDateString()</p>
    <p><strong>Data Fim:</strong> @Model.Projeto?.DataFim.ToShortDateString()</p>
    <p><strong>Data do Relatório:</strong> @Model.DataRelatorio.ToShortDateString()</p>
    <p><strong>Valor:</strong> @Model.Valor</p>
    <p><strong>Tempo Total (horas):</strong> @Model.TempoTotalHoras</p>
</div>

<p>
    <a asp-controller="Projetos" asp-action="Index" class="btn btn-secondary">Voltar à lista de projetos</a>
</p>
