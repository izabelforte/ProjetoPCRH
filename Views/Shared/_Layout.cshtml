@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var tipoUtilizadores = HttpContextAccessor.HttpContext.Session.GetString("TipoUtilizadores");
    var utilizadores = HttpContextAccessor.HttpContext.Session.GetString("Utilizadores");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ISIJ Projetões</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoPCRH.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><strong>ISIJ Projetões</strong></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (!string.IsNullOrEmpty(utilizadores))
                        {
                            @* Admin: acesso a todas as abas indicadas *@
                            if (tipoUtilizadores == "Administrador")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Clientes" asp-action="Index"><strong>Clientes</strong></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Contratos" asp-action="Index"><strong>Contratos</strong></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Faturacoes" asp-action="Index"><strong>Faturação</strong></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Funcionarios" asp-action="Index"><strong>Funcionários</strong></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Projetos" asp-action="Index"><strong>Projetos</strong></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Relatorios" asp-action="Index"><strong>Relatórios</strong></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Utilizadores" asp-action="Index"><strong>Utilizadores</strong></a>
                                </li>
                            }
                            @* Gestor de Projeto *@
                            else if (tipoUtilizadores == "GestorProjeto")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Projetos" asp-action="Index"><strong>Projetos</strong></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Contratos" asp-action="Index"><strong>Contratos</strong></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Relatorios" asp-action="Index"><strong>Relatórios</strong></a>
                                </li>
                            }
                            @* Funcionario *@
                            else if (tipoUtilizadores == "Funcionario")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Projetos" asp-action="MeusProjetos"><strong>Meus Projetos</strong></a>
                                </li>
                            }
                            @* Cliente *@
                            else if (tipoUtilizadores == "Cliente")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Relatorios" asp-action="MeusRelatorios"><strong>Meus Relatórios</strong></a>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (!string.IsNullOrEmpty(utilizadores))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Account" asp-action="Logout">Logout (@utilizadores)</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ProjetoPCRH - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
