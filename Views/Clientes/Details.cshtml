@model ProjetoPCRH.Models.Cliente

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeCliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeCliente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nif)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nif)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Morada)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Morada)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<h4>Contratos do Cliente</h4>
@if (Model.Contratos != null && Model.Contratos.Any())
{
    @foreach (var contrato in Model.Contratos)
    {
        
        
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Status</th>
                    <th>Data Início</th>
                    <th>Data Fim</th>
                    <th>Valor</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@contrato.ContratoId</td>
                    <td>@contrato.StatusContrato</td>
                    <td>@contrato.DataInicio.ToShortDateString()</td>
                    <td>@contrato.DataFim.ToShortDateString()</td>
                    <td>@contrato.Valor.ToString("C")</td>
                </tr>
            </tbody>
        </table>

        <h4>Faturações</h4>
        @if (contrato.Faturacoes != null && contrato.Faturacoes.Any())
        {
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Fatura Nº</th>
                        <th>Data</th>
                        <th>Valor</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var fatura in contrato.Faturacoes)
                    {
                        <tr>
                            <td>@fatura.FaturaId</td>
                            <td>@fatura.DataFatura.ToShortDateString()</td>
                            <td>@fatura.Valor.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Sem faturas para este contrato.</p>
        }
    }
}

else
{
    <p>Este cliente ainda não tem contratos.</p>
}
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ClienteId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
