@model ProjetoPCRH.Models.Cliente

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeCliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeCliente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nif)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nif)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Morada)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Morada)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<h4>Contratos do Cliente</h4>
@if (Model.Contratos != null && Model.Contratos.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descrição</th>
                <th>Data Início</th>
                <th>Data Fim</th>
                <th>Valor</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contrato in Model.Contratos)
            {
                <tr>
                    <td>@contrato.ContratoId</td>
                    <td>@contrato.StatusContrato</td>
                    <td>@contrato.DataInicio.ToShortDateString()</td>
                    <td>@contrato.DataFim.ToShortDateString()</td>
                    <td>@contrato.Valor.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Este cliente ainda não tem contratos.</p>
}
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ClienteId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
