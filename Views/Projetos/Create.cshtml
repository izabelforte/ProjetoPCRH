@model ProjetoPCRH.Models.ViewModels.ProjetoCreateViewModel


@{
    ViewData["Title"] = "Criar Projeto";
}

<h1>Criar Projeto</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeProjeto" class="control-label"></label>
                <input asp-for="NomeProjeto" class="form-control" />
                <span asp-validation-for="NomeProjeto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFim" class="control-label"></label>
                <input asp-for="DataFim" class="form-control" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orcamento" class="control-label"></label>
                <input asp-for="Orcamento" class="form-control" />
                <span asp-validation-for="Orcamento" class="text-danger"></span>

                <div class="form-group">
                    <label asp-for="StatusProjeto" class="control-label"></label>
                    <select asp-for="StatusProjeto" class="form-control" asp-items="ViewBag.StatusProjeto"></select>
                    <span asp-validation-for="StatusProjeto" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class ="form-control" asp-items="ViewBag.ClienteId"></select>
            </div>

            <!-- Funcionários -->
            <div class="form-group">
                <label>Funcionários</label>
                <select asp-for="FuncionariosSelecionados" asp-items="ViewBag.Funcionarios" class="form-control" multiple></select>
                <small class="form-text text-muted">Segure Ctrl ou Cmd para selecionar múltiplos.</small>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Criar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-primary">Voltar à lista</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    <script>
        const select = document.getElementById("funcionarios");
        const lista = document.getElementById("listaSelecionados");
        const hiddenInputs = document.getElementById("hiddenInputs");
        const btnAdd = document.getElementById("addFuncionario");

        btnAdd.addEventListener("click", () => {
            const selectedOption = select.options[select.selectedIndex];
            if (!selectedOption) return;

            const id = selectedOption.value;
            const nome = selectedOption.text;

            // Criar item da lista
            const li = document.createElement("li");
            li.classList.add("list-group-item", "d-flex", "justify-content-between", "align-items-center");
            li.innerHTML = `
                ${nome}
                <button type="button" class="btn btn-danger btn-sm">Remover</button>
            `;

            // Criar hidden input
            const input = document.createElement("input");
            input.type = "hidden";
            input.name = "FuncionariosSelecionados";
            input.value = id;
            li.appendChild(input);

            // Evento remover
            li.querySelector("button").addEventListener("click", () => {
                select.add(new Option(nome, id)); // volta ao select
                li.remove();
            });

            lista.appendChild(li);

            // Retirar do select
            select.remove(select.selectedIndex);
        });
    </script>
}
