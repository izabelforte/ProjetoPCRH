@model IEnumerable<ProjetoPCRH.Models.Projeto>

@{
    ViewData["Title"] = "Meus Projetos";
}@*Página de Projetos do Funcionário*@

<h2>Meus Projetos</h2>

@if (!Model.Any()) @*Verifica se tem projetos*@
{
    <p>Não tens projetos atribuídos neste momento.</p> 
}
else
{
    <table class="table table-striped">
        <thead> @*Cabeçalho*@
            <tr>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Data Início</th>
                <th>Data Fim</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var projeto in Model) @*Imprime os dados*@
            {
                <tr>
                    <td>@projeto.NomeProjeto</td>
                    <td>@projeto.Descricao</td>
                    <td>@projeto.DataInicio.ToShortDateString()</td>
                    <td>@projeto.DataFim.ToShortDateString()</td>
                    <td>@projeto.StatusProjeto</td>
                </tr>
            }
        </tbody>
    </table>
}
